@page "/Identity/Account/LogOut"
@model LogoutModel
@{
    ViewData["Title"] = "Log Out";
}
<link rel="stylesheet" href="/css/site.css" />
<header>
    <div class="LoginLogoutWrapper">
            <div class="LoginLogoutContent">
                <image class="LoginLogoutLogo" src="/images/SAD.webp" />
                <h1>@ViewData["Title"]</h1>
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <h5>Before you leave:</h5>
                        <p>
                            <a href="/communitygallery">Browse community made images</a>
                        </p>
                        <p>
                            Or
                        </p>
                        <p>
                            <a href="/projects">Make your own pixel project</a>
                        </p>
                        <h4>Are you sure you want to go?</h4>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <div class="LogoutButtonWrapper">
                                <button type="submit" class="btn btn-primary">Log Out</button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <p>You have successfully logged out of the application.</p>
                    }
                }
            </div>
    </div>
</header>